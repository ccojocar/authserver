<form action="/login" method="post">
    <% if (errors) { %>
     <div>
        <strong>Error: <%=errors.error.join()%></strong>
     </div>
    <% } %>
    <div>
        <label>Username:</label>
        <input type="text" name="username"/>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password"/>
    </div>
    <div>
        <input type="submit" value="Log In"/>
    </div>
</form>
